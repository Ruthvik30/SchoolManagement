@model List<UserRoleViewModel>
@{
    ViewBag.Title = "Manage user-roles";
    var userId = ViewBag.UserId;
}
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="card">
        <div class="card-header">
            <h2>Add or remove roles from user</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input id="btnUpdate" type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>
